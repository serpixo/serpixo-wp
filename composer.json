{
  "name": "serpixo/wordpress",
  "type": "project",
  "license": "GPL-2.0-only",
  "description": "serpixo wordpress",
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "vendor-dir": "vendor/composer",
    "allow-plugins": {
      "composer/installers": true,
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "ffraenz/private-composer-installer": true,
      "roots/wordpress-core-installer": true
    }
  },
  "repositories": {
    "wpackagist": {
      "type": "composer",
      "url": "https://wpackagist.org",
      "only": [
        "wpackagist-plugin/*",
        "wpackagist-theme/*"
      ]
    }
  },
  "require": {
    "php": ">=8.0",
    "composer/installers": "^1.4",
    "vlucas/phpdotenv": "^5",
    "oscarotero/env": "^2",
    "roots/bedrock-autoloader": "^1",
    "roots/bedrock-disallow-indexing": "^2",
    "roots/wordpress": "^6.4",
    "roots/wp-config": "^1.0",
    "roots/wp-password-bcrypt": "^1.1",
    "wpackagist-plugin/urlslab": "^2",
    "wpackagist-theme/twentytwentyfour": "^1.0",
    "wpackagist-plugin/wordfence": "^7.11",
    "wpackagist-plugin/wordpress-seo": "^21.9"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3",
    "roave/security-advisories": "dev-latest",
    "automattic/vipwpcs": "^2",
    "dealerdirect/phpcodesniffer-composer-installer": "^1",
    "wp-coding-standards/wpcs": "^2"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "extra": {
    "installer-paths": {
      "web/app/mu-plugins/{$name}/": [
        "type:wordpress-muplugin"
      ],
      "web/app/plugins/{$name}/": [
        "type:wordpress-plugin"
      ],
      "web/app/themes/{$name}/": [
        "type:wordpress-theme"
      ]
    },
    "wordpress-install-dir": "web/wp"
  },
  "scripts": {
    "test": [
      "phpcs"
    ]
  }
}
